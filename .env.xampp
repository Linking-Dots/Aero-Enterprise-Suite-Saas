# Aero-HR Environment Configuration for XAMPP Local Development
# Copy this to .env and update values as needed

APP_NAME="Aero HR"
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=http://aero-hr.local

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration for XAMPP
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=aero_hr_central
DB_USERNAME=root
DB_PASSWORD=

# Central Domain Configuration
CENTRAL_DOMAIN=aero-hr.local
CENTRAL_DOMAINS=aero-hr.local

# Session Configuration for Multi-Tenant
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.aero-hr.local

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Multi-Tenant Configuration
TENANCY_DATABASE_AUTO_DELETE=false
TENANCY_DATABASE_TEMPLATE=template

# Mail Configuration (for local testing)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@aero-hr.local"
MAIL_FROM_NAME="${APP_NAME}"

# Authentication
SANCTUM_STATEFUL_DOMAINS=aero-hr.local,*.aero-hr.local

# Broadcasting
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Optional: File Storage (use local for XAMPP)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Integration (for testing)
STRIPE_KEY=pk_test_your_stripe_key
STRIPE_SECRET=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=

# Development Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Local Development URLs (for reference)
# Central Admin: http://aero-hr.local
# Central Login: http://aero-hr.local/login
# Central Register: http://aero-hr.local/register
# Central Admin Panel: http://aero-hr.local/admin
# 
# Tenant Examples:
# DBEDC: http://dbedc.aero-hr.local/login
# ACME: http://acme.aero-hr.local/login
# TechStart: http://techstart.aero-hr.local/login
